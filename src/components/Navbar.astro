---
const links = [
  { href: "#inicio", label: "Inicio" },
  { href: "#empresa", label: "Empresa" },
  { href: "#componentes", label: "Componentes" },
  { href: "#sistema", label: "Sistema" }, // ðŸ†• NUEVO ENLACE
  { href: "#aplicaciones", label: "Aplicaciones" },
  { href: "#contacto", label: "Contacto" },
];
---

<header class="bg-gradient-to-r from-white via-blue-500 to-blue-950 text-[#182046] shadow-md backdrop-blur-md">
  <nav class="mx-auto max-w-7xl px-6 py-4 flex items-center justify-between">
    
    <!-- LOGO -->
    <a href="#inicio" class="flex items-center gap-5 group ml-2">
      <img
        src="/SonarColor.png"
        alt="Sonar logo"
        class="h-14 w-auto transition-transform duration-300 group-hover:scale-110"
      />
    </a>

    <!-- ENLACES -->
    <ul class="hidden md:flex items-center gap-8 text-[15px] font-semibold">
      {links.map(({ href, label }) => (
        <li>
          <a
            href={href}
            class="text-white hover:text-cyan-300 visited:text-white active:text-white focus:text-cyan-300 transition-colors duration-200"
            style="font-family: 'Glacial Indifference', 'Nunito Sans', sans-serif;"
          >
            {label}
          </a>
        </li>
      ))}
    </ul>

    <!-- MENÃš RESPONSIVO (MÃ³vil) -->
    <div class="md:hidden">
      <details class="relative">
        <summary class="list-none cursor-pointer flex items-center gap-2 select-none">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-cyan-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </summary>

        <ul class="absolute right-0 mt-2 bg-slate-900/95 backdrop-blur-lg rounded-lg shadow-lg border border-slate-700 overflow-hidden w-44">
          {links.map(({ href, label }) => (
            <li>
              <a
                href={href}
                class="block px-4 py-2 text-slate-200 hover:bg-cyan-900/30 hover:text-cyan-300 transition-colors"
              >
                {label}
              </a>
            </li>
          ))}
        </ul>
      </details>
    </div>
  </nav>
</header>
